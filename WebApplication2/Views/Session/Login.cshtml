@model ASPToep.Models.LoginViewModel
@{ViewData["Title"] = "Login"; }


<body style="padding: 0px;">
    <partial name="Razorpages/LoginHeader" />

    <div class="form">
        <div class="thumbnail"><img src="~/images/Logo.png" /></div>

        <form asp-action="Login" class="login-form">
            <input asp-for="Username" placeholder="username" />
            <input asp-for="Password" placeholder="password" />

            <div asp-validation-summary="ModelOnly"></div>

            <button>login</button>
            <p class="message">Not registered? <a data-href="Register">Create an account</a></p>
        </form>
    </div>

    @section Scripts{
        <script src="~/js/Login.js"></script>
    }
    @section Stylesheets{
        <link rel="stylesheet" href="~/css/Login.css" />
    }

</body>